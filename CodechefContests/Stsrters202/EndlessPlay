import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner scan = new Scanner(System.in);
		int x = scan.nextInt();
		int currhours = scan.nextInt();
	
		int totalHours = currhours;
		for(int i=1;i<=x-4;i++){
		    totalHours += 24;
		}
          System.out.println(totalHours);
	}
}
